{
  "name": "cucumber_automacao",
  "version": "1.0.0",
  "description": "Automação de testes com Cucumber.js e Allure Reports",
  "main": "cucumber.js",
  "scripts": {
    "test": "cucumber-js",
    "report": "allure generate allure-results --clean -o allure-report",
    "report:open": "allure open allure-report",
    "test:allure": "npm run test && npm run report && npm run report:open"
  },
  "keywords": [],
  "author": "Leonardo Teixeira",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@cucumber/pretty-formatter": "^2.1.0",
    "@playwright/test": "^1.54.2",
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "allure-commandline": "^2.34.1",
    "allure-cucumberjs": "^3.3.3",
    "allure-js-commons": "^3.3.3",
    "chai": "^4.3.10",
    "playwright": "^1.54.2"
  }
}
